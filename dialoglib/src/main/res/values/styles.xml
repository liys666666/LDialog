<resources>

    <!--默认Dialog背景全透明无边框theme-->
    <style name="LDialog" parent="@android:style/Theme.Dialog">
        <!--背景颜色和透明程度-->
        <!--<item name="android:windowBackground">@color/dialog_transparent</item>-->
        <!--是否去除标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>

    </style>

<!--    动画 -->
<!--    默认 -->
    <style name="li_dialog_default" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/li_dialog_default_show</item>  <!--显示动画-->
        <item name="android:windowExitAnimation">@anim/li_dialog_default_cancel</item> <!--消失动画-->
    </style>
<!--    默认 -->
    <style name="li_dialog_scale" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/li_dialog_scale_show</item>  <!--显示动画-->
        <item name="android:windowExitAnimation">@anim/li_dialog_scale_cancel</item> <!--消失动画-->
    </style>

<!--    left -->
    <style name="li_dialog_translate_left" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/li_dialog_translate_left_show</item>
        <item name="android:windowExitAnimation">@anim/li_dialog_translate_left_cancel</item>
    </style>

<!--    top -->
    <style name="li_dialog_translate_top" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/li_dialog_translate_top_show</item>
        <item name="android:windowExitAnimation">@anim/li_dialog_translate_top_cancel</item>
    </style>

<!--    right -->
    <style name="li_dialog_translate_right" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/li_dialog_translate_right_show</item>
        <item name="android:windowExitAnimation">@anim/li_dialog_translate_right_cancel</item>
    </style>

<!--    bottom -->
    <style name="li_dialog_translate_bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/li_dialog_translate_bottom_show</item>
        <item name="android:windowExitAnimation">@anim/li_dialog_translate_bottom_cancel</item>
    </style>
</resources>
